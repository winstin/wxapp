<block wx:if="{{$taroCompReady}}">
    <view class="{{styles.userAuth}}">
        <view class="{{styles.formView}}">
            <view class="{{styles.formItem}}"><text class="{{styles.itemTitle}}">真实姓名</text>
                <input class="{{styles.input}}" placeholder="请输入真实姓名" value="{{name}}" bindinput="anonymousFunc0" />
            </view>
            <view class="{{styles.formItem}}"><text class="{{styles.itemTitle}}">身份证号</text>
                <input class="{{styles.input}}" placeholder="请输入身份证号" value="{{IDNumber}}" bindinput="anonymousFunc1" />
            </view>
            <view class="{{styles.formImageItem}}"><text class="{{styles.itemTitle}}">身份证正面（人像面）</text>
                <block wx:if="{{frontFilePath}}">
                    <view class="{{styles.imageView}}">
                        <at-icon compid="{{$compid__89}}"></at-icon>
                        <image mode="scaleToFill" src="{{frontFilePath}}" class="{{styles.image}}"></image>
                    </view>
                </block>
                <block wx:if="{{!frontFilePath}}">
                    <view class="{{styles.uploadBtn}}" bindtap="chooseImageFront">
                        <view class="{{styles.addIcon}}">+</view>
                        <view class="{{styles.btnTitle}}">点击上传</view>
                    </view>
                </block>
            </view>
            <view class="{{styles.formImageItem}}"><text class="{{styles.itemTitle}}">身份证反面（国徽面）</text>
                <block wx:if="{{reverseFilePath}}">
                    <view class="{{styles.imageView}}">
                        <at-icon compid="{{$compid__90}}"></at-icon>
                        <image mode="scaleToFill" src="{{reverseFilePath}}" class="{{styles.image}}"></image>
                    </view>
                </block>
                <block wx:if="{{!reverseFilePath}}">
                    <view class="{{styles.uploadBtn}}" bindtap="chooseImageReverse">
                        <view class="{{styles.addIcon}}">+</view>
                        <view class="{{styles.btnTitle}}">点击上传</view>
                    </view>
                </block>
            </view>
        </view>
        <block wx:if="{{makerInfo.verifyStatus !== 0}}">
            <at-button compid="{{$compid__91}}">提交</at-button>
        </block>
    </view>
</block>