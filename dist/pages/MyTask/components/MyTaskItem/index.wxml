<block wx:if="{{$taroCompReady}}">
    <view class="{{styles.taskItemView}}" bindtap="detail">
        <view class="{{styles.title}}">{{item.taskName}}</view>
        <view class="{{styles.sponsorView}}">
            <view>
                <view class="{{styles.sponsorTit}}">发起</view>{{item.publishUserName}}</view>
            <view>{{item.createTime}}</view>
        </view>
        <view class="{{styles.content}}">{{item.taskContent}}</view>
        <view class="{{styles.costView}}">
            <view class="{{styles.cost}}">￥{{item.taskCost}}</view>
            <block>
                <block wx:if="{{item.taskStatus === '3'}}">
                    <view class="{{styles.receive}}">{{item.taskStatusValue}}</view>
                </block>
                <block wx:else>
                    <view class="{{styles.receiveBtn}}" catchtap="receive">完成</view>
                </block>
            </block>
        </view>
    </view>
</block>