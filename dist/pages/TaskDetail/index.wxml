<block wx:if="{{$taroCompReady}}">
    <view class="{{styles.taskDetail}}">
        <view class="{{styles.name}}">{{taskName}}</view>
        <view class="{{styles.tit}}">发起人</view>
        <view class="{{styles.cont}}">{{publishUserName}}</view>
        <view class="{{styles.tit}}">发布时间</view>
        <view class="{{styles.cont}}">{{createTime}}</view>
        <view class="{{styles.tit}}">任务说明</view>
        <view class="{{styles.cont}}">{{taskContent}}</view>
        <view class="{{styles.tit}}">任务附件</view>
        <view>
            <block>
                <block wx:if="{{taskAttachments.length > 0}}">
                    <a wx:for="{{taskAttachments}}" wx:for-item="item" wx:for-index="_anonIdx2">文件2.doc</a>
                </block>
                <block wx:else>
                    <a>暂无附件</a>
                </block>
            </block>
        </view>
        <block wx:if="{{taskStatus === '1' || taskStatus === '0'}}">
            <view class="{{styles.bottom}}" style="{{anonymousState__temp}}">
                <view class="{{styles.bottomView}}">
                    <view class="{{styles.cost}}">¥{{taskCost}}</view>
                    <at-button compid="{{$compid__86}}">领取</at-button>
                </view>
            </view>
        </block>
        <block wx:if="{{taskStatus === '2'}}">
            <view class="{{styles.bottom}}" style="{{anonymousState__temp2}}">
                <view class="{{styles.bottomView}}">
                    <view class="{{styles.cost}}">¥{{taskCost}}</view>
                    <at-button compid="{{$compid__87}}">完成</at-button>
                </view>
            </view>
        </block>
        <at-modal compid="{{$compid__88}}"></at-modal>
    </view>
</block>